<header>
  <link rel="stylesheet" href="/stylesheet/show.css">
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i> 查看地圖
        </a>
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>
      <p class="mb-5">
        {{restaurant.description}}
      </p>
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
  <form action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST" style="display:flex; flex-direction:column">
    <div>name</div><input type="text" value="{{restaurant.name}}" name="name">
    <div>name_en</div><input type="text" value="{{restaurant.name_en}}" name="name_en">
    <div>category</div><input type="text" value="{{restaurant.category}}" name="category">
    <div>image</div><input type="text" value="{{restaurant.image}}" name="image">
    <div>location</div><input type="text" value="{{restaurant.location}}" name="location">
    <div>phone</div><input type="text" value="{{restaurant.phone}}" name="phone">
    <div>google_map</div><input type="text" value="{{restaurant.google_map}}" name="google_map">
    <div>rating</div><input type="number" step="0.01" value="{{restaurant.rating}}" name="rating">
    <div>description</div><input type="text" value="{{restaurant.description}}" name="description">
    <button type="submit">Update</button>
  </form>
</div>
